page{
  background-color: rgb(79, 187, 236);
}
.van-card{
    color:#333;height:100px;
    font-size:16px;
    background:#fafafa;
    position:relative;
    box-sizing:border-box;
    padding:5px 15px 5px 115px;
    margin-top: 5px;
}

.van-card--center,.van-card__thumb{
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
    -webkit-box-pack:center;
    -webkit-justify-content:center;
    justify-content:center
}

.van-card__thumb{
    top:5px;
    left:15px;
    width:64px;
    height:90px;
    position:absolute
}

.van-card__img{
    border:none;
    max-width:100%;
    max-height:100%
}

.van-card,.van-card__row,.van-card__thumb{
    display:-webkit-box;
    display:-webkit-flex;
    display:flex
}

.van-card__content{
    width:100%
}

.van-card__content--center{
    height:90px;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center
}

.van-card__desc,.van-card__title{
    line-height:20px;
    word-break:break-all
}

.van-card__title{
    max-height:40px;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical
}

.van-card__desc{
    color:#666;
    font-size:12px;
   
    overflow:hidden;
}

.van-card__footer{
    right:15px;
    bottom:5px;
    position:absolute
}

.van-card__footer .van-button{
    margin-left:5px
}

.num{
  line-height:20px;
  word-break:break-all;
  color:rgb(177, 10, 10);
  font-size:12px;
}